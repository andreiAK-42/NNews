<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/nw_main"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/nw_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@android:color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/arrow_back"
                android:layout_gravity="center"
                android:background="@drawable/ripple_effects"/>

            <View
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btn_love"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/heart_white"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ripple_effects"/>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>


    <ImageView
        android:id="@+id/newsImage"
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/newsName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="3mm"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/newsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginRight="20dp"
        android:textColor="@color/black"
        android:textSize="2.5mm" />


    <com.google.android.material.chip.Chip
        android:id="@+id/buttonGoToSource"
        style="@style/Widget.MaterialComponents.Chip.Action"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:text="Read at the source"
        android:textColor="@color/white"
        android:textSize="3mm"
        app:chipIcon="@drawable/browser"
        app:chipIconSize="30dp"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:chipBackgroundColor="@color/black"
        app:chipCornerRadius="5dp"
        android:textAlignment="center"
        app:iconStartPadding="10dp"
        app:chipStrokeColor="@color/white"
        app:chipStrokeWidth="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>


</LinearLayout>